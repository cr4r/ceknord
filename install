msg () {
BRAN='\033[1;37m' && VERMELHO='\e[31m' && VERDE='\e[32m' && AMARELO='\e[33m'
AZUL='\e[34m' && MAGENTA='\e[35m' && MAG='\033[1;36m' &&NEGRITO='\e[1m' && SEMCOR='\e[0m'
 case $1 in
  -ne)cor="${VERMELHO}${NEGRITO}" && echo -e "${cor}${2}${SEMCOR}";;
  -ama)cor="${AMARELO}${NEGRITO}" && echo -e "${cor}${2}${SEMCOR}";;
  -bar2)cor="${AZUL}${NEGRITO}======================================================" && echo -e "${cor}${SEMCOR}";;
 esac
}
msg -bar2
msg -ama "PERHATIAN !!!"
msg -ama "Script ini memerlukan tool nordvpn"
msg -ama "Recomended OS"
msg -ama "Ubuntu / Debian"
msg -bar2
msg -ama "Sedang Menginstall Module JS, mohon tunggu sebentar"
npm i&&npm audit fix&>/dev/null
msg -bar2
msg -ne "Jika Error, Silahkan update NODEJS mu!"
msg -bar2
msg -ama "Sedang mencari dan menginstall tool pendukung"
[[ $(dpkg --get-selections | grep -w "nordvpn"|head -1) ]] || {
    wget -qnc https://repo.nordvpn.com/deb/nordvpn/debian/pool/main/nordvpn-release_1.0.0_all.deb&>/dev/null
    sudo dpkg -i nordvpn-*&&sudo apt update&&sudo apt install nordvpn -y
    [[ $(dpkg --get-selections | grep -w "nordvpn"|head -1) ]] || msg -ne "ERROR ERROR ERROR"
}
msg -bar2
